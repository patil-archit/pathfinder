# Production Environment Variables for PathFinder AI
# Copy these to your Railway environment variables

# Django Configuration
SECRET_KEY=your-production-secret-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=backend.settings_prod

# MySQL Database Options:
# Option 1: DATABASE_URL format (recommended for PlanetScale)
# DATABASE_URL=mysql://username:password@host:port/database

# Option 2: Individual MySQL variables
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=career_pathfinder
# DB_USER=your-mysql-user
# DB_PASSWORD=your-mysql-password
# DB_HOST=your-mysql-host
# DB_PORT=3306

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.vercel.app
FRONTEND_DOMAIN=your-frontend-domain.vercel.app
CUSTOM_DOMAIN=your-custom-domain.com

# AI Services (Optional)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@pathfinder.ai

# Logging
DJANGO_LOG_LEVEL=INFO

# Redis (Optional - for caching)
# REDIS_URL=redis://localhost:6379/1